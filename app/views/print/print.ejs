<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="utf-8">
<title>Tokyo Tower PRINT TICKET</title>
<style>
@page {
    size: A4 portrait;
    margin: 0;
}
html,
body {
    width: 210mm;
    height: 297mm;
}
</style>
<link href="/css/print.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="/js/lib/url.min.js"></script>
<script src="/js/common.js"></script>
</head>
<body>

<div class="noprint">
    <%- include('../common/_select_locale.ejs') %>
</div>

<%
let momentLocale = locale || 'en';
if (momentLocale === 'zh-hans') {
    momentLocale = 'zh-cn';
} else if (momentLocale === 'zh-hant') {
    momentLocale = 'zh-tw';
}
moment.locale(momentLocale);
for (let reservation of reservations) {
    let isNoCharge = (reservation.payment_method === 'F');
%>
<div class="printcontent">

    <div class="pr-header">
        <div class="logo-ttts">
            <img src="/images/common/logo.png">
        </div>
        <div class="title">
            <%- __('TicketAndReceipt') %>
        </div>
        <div class="logo-tour">
            <img src="/images/common/logo_tour_gold.svg">
        </div>

    </div>

    <div class="pr-thanks">
        <%- __('TicketInfoMsg') %><br>
    </div>

    <div class="pr-qrcode pr-bg">
        <img class="pr-bg-image" src="/images/print/bg_gray.png">
        <div class="pr-bg-content inner">
            <h2>
                <%- __('TicketQRInfo') %>
            </h2>
            <div class="wrapper-qrimg pr-bg">
                <img src="//chart.apis.google.com/chart?chs=150x150&cht=qr&chl=<%= reservation.qr_str %>">
            </div>
        </div>
    </div>


    <div class="pr-paddinglr">

        <table class="pr-maintable">
            <tbody>
                <tr>
                    <td class="main-info">
                        <div class="pr-rsrvnum">
                        <h3><%- __('PaymentNo') %></h3>
                            <strong><%- reservation.get('payment_no') %></strong>
                        </div>

                        <div class="pr-time">
                            <h3><%- __('PurchaseContentDay') %></h3>
                            <strong><%- moment(reservation.get('performance_day'), 'YYYYMMDD').format('LL (ddd)') %></strong>
                        </div>

                        <div class="pr-time">
                            <h3><%- __('PurchaseContentTime') %></h3>
                            <strong><%- moment(reservation.get('performance_start_time'), 'HHmm').format('HH:mm') %> - <%- moment(reservation.get('performance_end_time'), 'HHmm').format('HH:mm') %>(JST)</strong>
                        </div>

                        <div class="pr-time">
                            <h3><%- __('PurchaseEntryTime') %></h3>
                            <strong><%- moment(reservation.get('performance_start_time'), 'HHmm').format('HH:mm') %> - <%- moment(reservation.get('performance_end_time'), 'HHmm').format('HH:mm') %>(JST)</strong>
                            <%
                            var time = moment(reservation.get('performance_start_time'), 'HHmm').format('HH:mm');
                            var timeEarly = moment(reservation.get('performance_start_time'), 'HHmm').add(-30, 'minutes').format('HH:mm');
                            if (moment(reservation.get('performance_start_time'), 'HHmm').format('HH:mm') !== "09:00") { %>
                            <% } %>
                        </div>

                        <div class="pr-time">
                            <h3><%- __('TourNumber') %></h3>
                            <strong><%- reservation.performance_ttts_extension.tour_number %></strong>
                        </div>

                        <div class="pr-ticket">
                            <h3><%- __('TicketType') %></h3>
                            <strong><%- reservation.get('ticket_type_name')[locale] %> / <%- ((!isNoCharge) ? '&yen;' + reservation.get('ticket_type_charge') + '&nbsp;' : '') %>(<%- reservation.seat_code %>)</strong>
                        </div>

                        <div class="pr-term">
                            <h4><%- __('ImportantNotes') %></h4>
                            <p>
                                <%- __('TicketNotesContents') %>
                            </p>
                        </div>

                        <div class="pr-contact">
                            <h4><%- __('ContactUs') %></h4>
                            <p><%- __('ContactAvailableDay') %></p>
                            <h4><%- __('OfficialSiteWithUrl') %></h4>
                        </div>


                    </td>

                    <td class="main-map" rowspan="6">
                        <p class="map">
                            <img src="/images/print/map/<%- locale %>.svg">
                        </p>

                        <div class="accesstable">
                            <h4><%- __('RailWay') %></h4>
                            <table>
                                <tbody>
                                    <tr><td>
                                        ① <%- __('Akabanebashi') %><br>
                                        ② <%- __('Kamiyacho') %><br>
                                        ③ <%- __('Onarimon') %><br>
                                        ④ <%- __('Daimon') %><br>
                                    </td><td>
                                        ⑤ <%- __('Hamamatsucho') %><br>
                                    </td></tr>
                                </tbody>
                            </table>
                        </div>

                        <hr>

                        <div class="stafftable">
                            <h3><%- __('StaffPosition') %></h3>
                            <h4><img class="mark" src="/images/print/staff_mark.svg">：<%- __('StaffPosition') %></h4>
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            <img src="/images/print/staff_map_1.svg">
                                        </td>
                                        <td>
                                            <h4><%- __('FootTown') %></h4>
                                            <p><%- __('FootTownInfo') %></p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img src="/images/print/staff_map_2.svg">
                                        </td>
                                        <td>
                                            <h4><%- __('TopDeckGate') %></h4>
                                            <p><%- __('TopDeckGateInfo') %></p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>

                </tr>


            </tbody>
        </table>

    </div>

    <div class="pr-footer">
        <p>©2017 TOKYO TOWER. ALL RIGHTS RESERVED.</p>
    </div>

</div>
<% } %>

</body>
</html>
